#include "aplicacion.h"

void InicSysTick(void){ //si divido x 4, interrumpe cada 2,5ms
		STRELOAD  = ( STCALIB / 4 ) - 1 ;   //N=1 para 10ms
		STCURR = 0;

		ENABLE = 1;
		TICKINT = 1;
		CLKSOURCE = 1;
		return;
}

void SysTick_Handler(void)
{
	static uint32_t msTicksr=100;
	static uint8_t flagr=1;
	uint8_t bufferledr=100;

	static uint32_t msTicksv=50;
	static uint8_t flagv=1;
	uint8_t bufferledv=100;
	if(msTicksr)
	{
		msTicks--;

		if(!msTicks)
		{
			if(flag)
			{
				flag=0;
				msTicks=100;
			}
			else
			{
				flag=1;
				if(bufferled)
					SetPIN(LEDR,0);
				else
					SetPIN(LEDR,1);
					msTicks=bufferled;
			}

		}
	}
	if(msTicksg)
	{
		msTicksg--;

		if(!msTicksg)
		{
			if(flagg)
			{
				flagg=0;
				msTicksg=100;
			}
			else
			{
				flagg=1;
				if(bufferledg)
					SetPIN(LEDV,0);
				else
					SetPIN(LEDV,1);
					msTicksg=bufferledg;
			}

		}
	}

}
