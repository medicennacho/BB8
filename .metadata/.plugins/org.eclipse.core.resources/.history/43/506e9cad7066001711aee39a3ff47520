#include "aplicacion.h"

void InicSysTick(void){ //si divido x 4, interrumpe cada 2,5ms
		STRELOAD  = ( STCALIB / 4 ) - 1 ;   //N=1 para 10ms
		STCURR = 0;

		ENABLE = 1;
		TICKINT = 1;
		CLKSOURCE = 1;
		return;
}

void SysTick_Handler(void)
{
	static uint32_t msTicksr=100;
	static uint8_t flagr=1;
	static uint8_t bufferledr=100;

	static uint32_t msTicksv=100;
	static uint8_t flagv=1;
	static uint8_t bufferledv=0;

	if(msTicksr)
	{
		msTicksr--;
		if(!msTicksr)
		{
			msTicksr=bufferledr;

			SetPIN(LEDR,0);

			if(flagr==1)
				bufferledr--;
			else
				bufferledr++;

			if(bufferledr == 1)
			{
				flagr=0;
			}
			if(bufferledr==100)
			{
				flagr=1;
			}



		}
		else
		{
			SetPIN(LEDR,1);
		}
	}


	if(msTicksv)
	{
		msTicksv--;
		if(!msTicksv)
		{
			if(flagv==1)
				bufferledv--;
			else
				bufferledv++;

			if(!bufferledv )
			{
				flagv=0;
			}
			if(bufferledv==100)
			{
				flagv=1;
			}

			msTicksv=bufferledv;

			SetPIN(LEDV,1);



		}
		else
		{
			SetPIN(LEDV,0);
		}
	}

}
