#include "aplicacion.h"

void InicSysTick(void){ //si divido x 4, interrumpe cada 2,5ms
		STRELOAD  = ( STCALIB / 4 ) - 1 ;   //N=1 para 10ms
		STCURR = 0;

		ENABLE = 1;
		TICKINT = 1;
		CLKSOURCE = 1;
		return;
}

void SysTick_Handler(void)
{
	static uint32_t msTicksr=100;
	static uint8_t flagr=1;
	static uint8_t bufferledr=100;

	static uint32_t msTicksv=100;
	static uint8_t flagv=1;
	static uint8_t bufferledv=100;

	if(msTicksr)
	{
		msTicksr--;
		if(!msTicksr)
		{
			SetPIN(LEDR,0);
			if(!bufferledr)
			{
				flagr=0;
			}
			if(bufferledr==100)
			{
				flagr=1;
			}
			if(flagr==1)
				bufferledr--;
			else
				bufferledr++;


			msTicksr=bufferledr;
		}
		else
		{
			SetPIN(LEDR,1);
		}
	}


	if(msTicksv)
	{
		msTicksv--;
		if(!msTicksv)
		{
			SetPIN(LEDV,0);
			if(flagv==1)
				bufferledV--;
			else
				bufferledV++;

			if(!bufferledV)
			{
				flagV=0;
			}
			if(bufferledV==100)
			{
				flagV=1;
			}
			msTicksV=bufferledV;
		}
		else
		{
			SetPIN(LEDV,1);
		}
	}

}
