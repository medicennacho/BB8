#include "aplicacion.h"

void InicSysTick(void){ //si divido x 4, interrumpe cada 2,5ms
		STRELOAD  = ( STCALIB / 4 ) - 1 ;   //N=1 para 10ms
		STCURR = 0;

		ENABLE = 1;
		TICKINT = 1;
		CLKSOURCE = 1;
		return;
}

void SysTick_Handler(void)
{
	static uint32_t msTicksr=1000;
	static uint8_t flagr1=1;
	static uint8_t flagr2=1;
	static uint8_t bufferledr=1000;


	if(msTicksr)
	{
		msTicksr--;
		if(!msTicksr)
		{


			if(flagr1==1)
				bufferledr--;
			else
				bufferledr++;

			if(bufferledr == 1)
			{
				flagr1=0;
			}
			if(bufferledr==50)
			{
				flagr1=1;
			}

			msTicksr=bufferledr;

			if(flagr2==1)
			{
				SetPIN(LEDR,0);
			}
			else
			{
				SetPIN(LEDR,1);
				flagr2=1;
			}

		}


	}
/*	static uint32_t msTicksr=100;
